<% provide(:title, "#{@user.first_name} #{@user.last_name}'s Profile".html_safe) %>

<h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
<h2>email: <%= @user.email %></h2>

<% if @user.posts.any? %>
	<h3>Posts: (<%= @user.posts.count %>)</h3>
	<ol class="posts">
		<%= render @posts %>
	</ol>
	<%= will_paginate @posts %>
<% end %>
